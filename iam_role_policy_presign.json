{
  "Version" : "2012-10-17",
    "Statement" :[
    {
        "Effect"  : "Allow",
        "Action"   :[
            "dynamodb:PutItem",
            "dynamodb:GetItem",
            "dynamodb:UpdateItem"
        ],
        "Resource" : "${aws_dynamodb_table.files.arn}"
    },
    {
        "Effect" : "Allow",
        "Action":  [
          "s3:PutObject",                 
          "s3:GetObject",               
          "s3:CreateMultipartUpload",
          "s3:UploadPart",
          "s3:CompleteMultipartUpload",
          "s3:AbortMultipartUpload"
        ],
        "Resource": "${aws_s3_bucket.files.arn}/*"
    }
  ]

}